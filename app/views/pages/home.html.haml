.container.py-5
  %h2 Trouver un composteur

  = form_with url: search_sites_path, method: :get, data: {remote: false} do |form|
    .form-group
      .row
        .col-sm-6= text_field_tag(:address, nil, placeholder: 'Saisissez une addresse', class: 'form-control' )
        .col-sm-6= submit_tag("Rechercher", class: 'btn btn-primary')

%br

#map

:javascript
  var mymap = L.map('map').setView([45.7617, 4.8361], 13);
  var accessToken = '#{Rails.application.credentials.mapbox[:access_token]}';

  L.tileLayer('https://api.mapbox.com/styles/v1/{id}/tiles/{z}/{x}/{y}?access_token={accessToken}', {
      attribution: 'Map data &copy; <a href="https://www.openstreetmap.org/">OpenStreetMap</a> contributors, <a href="https://creativecommons.org/licenses/by-sa/2.0/">CC-BY-SA</a>, Imagery © <a href="https://www.mapbox.com/">Mapbox</a>',
      maxZoom: 18,
      id: 'mapbox/streets-v11',
      tileSize: 512,
      zoomOffset: -1,
      accessToken: accessToken
  }).addTo(mymap);

  var data = #{raw @sites};

  data.forEach((site, i) => {
    if (site.latitude == null) {
      return;
    }
    var marker = L.marker([site.latitude, site.longitude]).addTo(mymap);
    var text = "<h6><b>" + site.name + "</b></h6>"
    text +=  "<p><b>Adresse :</b></p>"
    text +=  "<p>" + site.address + "<br>"
    text +=  site.zipcode + "<br>"
    text +=  site.city + "</p>"
    text +=  "<p><b>Accès :</b></p>"
    text +=  "<p>" + site.participation_conditions + "<br>"
    text +=  site.operation_conditions + "</p>"
    text +=  "<p><b>Contact :</b></p>"
    text +=  "<p><a href='mailto:" + site.contact_email + "'>" + site.contact_email + "</a></p>"
    // text +=  "<p><b>Organisme :</b></p>"
    // text +=  "<p>" + "<a href=" + site.organisation_website + ">"+ site.organisation_name + "</a>\r\n"
    // text +=  "<p>" + site.organisation_name + "</p>"

    marker.bindPopup(text);
  });
