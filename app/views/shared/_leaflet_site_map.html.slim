javascript:
  var mymap = L.map('map').setView(#{@site.to_coordinates}, 20);
  var accessToken = '#{Rails.application.credentials.mapbox[:access_token]}';

  L.tileLayer('https://api.mapbox.com/styles/v1/{id}/tiles/{z}/{x}/{y}?access_token={accessToken}', {
      attribution: 'Map data &copy; <a href="https://www.openstreetmap.org/">OpenStreetMap</a> contributors, <a href="https://creativecommons.org/licenses/by-sa/2.0/">CC-BY-SA</a>, Imagery Â© <a href="https://www.mapbox.com/">Mapbox</a>',
      maxZoom: 18,
      id: 'mapbox/streets-v11',
      tileSize: 512,
      zoomOffset: -1,
      accessToken: accessToken
  }).addTo(mymap);

  var data = #{raw @sites_marker_data};

  data.forEach((site, i) => {
    if (site.latitude == null) {
      return;
    }
    var composterIcon = L.icon({
      iconUrl: site.public ? '/assets/public_composter_marker.png' : '/assets/private_composter_marker.png',
      iconSize: [24, 24],
    });
    var marker = L.marker([site.latitude, site.longitude], {icon: composterIcon}).addTo(mymap);
    var text = site.map_marker_display;
    marker.bindPopup(text);
  });
